<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/rep_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/rep_pic_desc"
        android:layout_marginEnd="16dp"
        android:layout_alignParentStart="true"/>
    
    <LinearLayout
        android:id="@+id/row_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/rep_picture">
        <TextView
            android:id="@+id/rep_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_filler"/>
        <TextView
            android:id="@+id/rep_party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/party_filler"/>
        <TextView
            android:id="@+id/rep_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_filler"/>
        <TextView
            android:id="@+id/rep_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_filler"/>
        <TextView
            android:id="@+id/rep_tweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tweet_filler"/>
        <TextView
            android:id="@+id/rep_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/handle_filler"/>
    </LinearLayout>

</RelativeLayout>